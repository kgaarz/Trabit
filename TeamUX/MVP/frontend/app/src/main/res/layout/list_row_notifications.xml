<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
    >
    <LinearLayout
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
    >

        <TextView android:layout_width="60dp"
              android:layout_height="30dp"
              android:fontFamily="@font/oxygen"
              android:text="Tag"
              android:textSize="13sp"

        />

        <ImageView

            android:layout_width="3dp"
            android:layout_height="3dp"
            android:src="@mipmap/seperate_dot"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
    />

        <TextView android:layout_width="60dp"
              android:layout_height="30dp"
              android:fontFamily="@font/oxygen"
              android:text="Uhrzeit"
              android:textSize="13sp"
              android:textAlignment="center"

         />

        <ImageView

            android:layout_width="3dp"
            android:layout_height="3dp"
            android:src="@mipmap/seperate_dot"
            android:layout_marginTop="10dp"
        />

        <ImageView

            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/profile_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
        />

        <TextView android:layout_width="100dp"
              android:layout_height="30dp"
              android:fontFamily="@font/oxygen"
              android:text="Benutzername"
              android:textSize="13sp"
              android:layout_marginLeft="7dp"
        />

    </LinearLayout>


    <TextView

                android:layout_width="270dp"
                android:layout_height="35dp"
                android:background="#3294D1"
                android:layout_marginTop="35dp"
                android:text="Kennung"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/kennungsText"
                android:fontFamily="@font/oxygen"
    />

    <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/check_positive_grey"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
    />
    <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="85dp"
                android:layout_marginRight="25dp"
                android:text="0"
                android:fontFamily="@font/oxygen"
    />


    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/check_negative_grey"
            android:background="@null"
            android:scaleType="fitCenter"
    />

    <TextView

            android:layout_width="270dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:text="Kommentar, Kommentar, Kommentar"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:fontFamily="@font/oxygen"
    />

    <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/comment_icon_black"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="180dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_marginLeft="5dp"
    />

    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:text="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
    />

</RelativeLayout>


