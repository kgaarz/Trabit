<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OverviewActivity">


    <LinearLayout
            android:orientation="horizontal"
            android:background="@mipmap/hintergrund"
            android:layout_width="match_parent"
            android:layout_height="150dp"
    >

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@mipmap/geo_location" android:id="@+id/locationChange"
                android:background="#FFFFFF"

        />

        <TextView
                android:text ="Aktuelle StÃ¶rungen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headerStartScreen"
                android:textSize="30sp"
                android:textColor="#F9F9F9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
        />

        <TextView
                android:text="Gummersbach"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:id="@+id/locationHeader"
                android:textSize="20sp"
                android:textColor="#F9F9F9"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="-200dp"
        />

        <SearchView
                android:id="@+id/searchReports"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="-185dp"
                android:theme="@style/AppTheme.SearchReports"

        />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="100dp">

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="7dip"
            android:background="@drawable/drop_shadow_start" >
    </View>



</LinearLayout>