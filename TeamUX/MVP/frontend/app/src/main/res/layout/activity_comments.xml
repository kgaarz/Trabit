<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout_comments"
    tools:context="de.trabit.reportApp.CommentsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/header_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_header">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                app:srcCompat="@mipmap/arrow_back"
                android:id="@+id/back_button"
                android:background="@null"
                android:scaleType="fitCenter"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/header_relative_layout"
            android:layout_height="600dp"
            android:padding="15dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comments_recycler_view"
            android:layout_alignParentTop="true"
        />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:padding="4dp"
            android:background="@color/colorWhite"
            android:layout_alignParentBottom="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kommentar hinzufÃ¼gen ..."
            android:id="@+id/addComment"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@null"
            android:layout_toLeftOf="@id/comment_send_button"

        />

        <Button
            android:id="@+id/comment_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senden"
            android:background="@drawable/custom_button_send"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            />





         </RelativeLayout>

  </RelativeLayout>

</LinearLayout>