<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout_secondAdd"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:windowActionBar="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/arrow_back_black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageMeansOftransport"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/bus_icon_clicked"

                />

            <TextView
                android:id="@+id/textMeansOfTransport"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageMeansOftransport"
                android:text="Bus"
                android:textAlignment="center"
                android:textColor="#1C6A9C"
                android:textSize="25sp" />


        </RelativeLayout>

        <ImageButton
            android:id="@+id/closeSecondAddButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/close" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/linie_blau" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputTextNr"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:ems="10"
            android:fontFamily="@font/oxygen"
            android:hint="Kennungsnummer hier eingeben"
            android:inputType="textPersonName"
            android:textColor="@color/colorMiddleGrey"
            android:typeface="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputTextDestination"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:ems="10"
            android:fontFamily="@font/oxygen"
            android:hint="Zielort hier eingeben"
            android:inputType="textPersonName"
            android:textColor="@color/colorMiddleGrey"
            android:typeface="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/custom_button_send"
            android:fontFamily="@font/oxygen"
            android:text="Weiter"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>

