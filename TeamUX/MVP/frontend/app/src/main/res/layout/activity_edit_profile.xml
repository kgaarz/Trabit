<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:background="@color/colorLighterGrey"
    android:orientation="vertical"
    android:windowActionBar="false"
    tools:context="de.trabit.reportApp.EditProfile">


    //header

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="31dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/arrow_back_black"
            android:tint="@color/colorDarkBlue" />

        <TextView
            android:id="@+id/txtUserData"
            android:layout_width="283dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_toEndOf="@+id/btn_back"
            android:layout_toRightOf="@+id/btn_back"
            android:fontFamily="@font/oxygen"
            android:text="Meine Kontoeinstellungen"
            android:textColor="@color/colorDarkBlue"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>


    //enter name

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="383dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/oxygen"
            android:text="Hier kannst du deine Kontoeinstellungen Ã¤ndern und speichern."
            android:textColor="@color/colorMiddleGrey"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editNameLayout"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/tile_layout_detail"
        android:orientation="horizontal"
        android:padding="10dp">


        <EditText
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Vorname Nachname" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editMailLayout"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tile_layout_detail"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/editMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email-Adresse" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editHomeLayout"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tile_layout_detail"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/editHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="text"
            android:text="Wohnort" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editNicknameLayout"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tile_layout_detail"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/editNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="text"
            android:text="Nutzername" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/editPasswordLayout"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tile_layout_detail"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Password" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >

        <Button
            android:id="@+id/profile_send_button"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_send"
            android:text="Speichern"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>


</LinearLayout>
