<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.Searchbar" parent="AppTheme">
        <!--This line changes the color of location serachbar icon and text -->
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary </item>


    </style>

    <style name="AppTheme.SearchReports" parent="AppTheme">
    <!--This line changes the color of searchReports searchbar icon and text-->
    <item name="android:textColor">@color/colorPrimaryDark </item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark </item>
    </style>

</resources>
